{
  "name": "pigeon-migration",
  "version": "0.0.1",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "build:watch": "rm -rf lib && tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate": "graphql-codegen --config codegen.yml",
    "lint": "eslint .",
    "serve:dev": "yarn run build:watch | firebase serve --only functions",
    "serve": "yarn run build && firebase emulators:start --only functions",
    "shell": "yarn run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "start": "yarn run shell",
    "test": "jest"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "4.16.4",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.7.0",
    "graphql": "^15.1.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "node-fetch": "2.6.0"
  },
  "devDependencies": {
    "@digitalroute/cz-conventional-changelog-for-jira": "4.1.4",
    "@firebase/app-types": "^0.6.1",
    "@graphql-codegen/cli": "1.15.4",
    "@graphql-codegen/introspection": "1.15.4",
    "@graphql-codegen/typescript": "1.15.4",
    "@graphql-codegen/typescript-resolvers": "1.15.4",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "commitizen": "^4.1.2",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "firebase-functions-test": "^0.2.0",
    "husky": ">=4",
    "jest": "^26.0.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5"
  },
  "keywords": [],
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira"
    }
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.ts"
    ],
    "moduleNameMapper": {
      "@utils": "<rootDir>/utils",
      "@utils/(.*)": "<rootDir>/utils/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "jest-environment-node"
  }
}
