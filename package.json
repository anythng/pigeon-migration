{
  "name": "pigeon-migration",
  "version": "0.0.1",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "build:watch": "rm -rf lib && tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate": "gqless generate",
    "lint": "eslint .",
    "serve:dev": "yarn run build:watch | firebase serve --only functions",
    "serve": "yarn run build && firebase emulators:start --only functions",
    "shell": "yarn run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "start": "yarn run shell"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "1.19.0",
    "express": "4.16.4",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.7.0",
    "gqless": "^0.0.1-alpha.29",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "node-fetch": "2.6.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@digitalroute/cz-conventional-changelog-for-jira": "4.1.4",
    "@firebase/app-types": "^0.6.1",
    "@gqless/cli": "^0.0.1-alpha.31",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "commitizen": "^4.1.2",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "esm": "^3.2.25",
    "firebase-functions-test": "^0.2.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "keywords": [],
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira"
    }
  }
}
